# Global attributes for forcing line endings normalization of specific files

* text=auto

# Git configs
.gitattributes text eol=lf encoding=utf-8
.gitignore     text eol=lf encoding=utf-8

# Markdown documents
*.md text eol=lf encoding=utf-8

# Haskell sources
*.hs text eol=lf encoding=utf-8

# Stack project files
package.yaml     text eol=lf encoding=utf-8
stack.yaml       text eol=lf encoding=utf-8
stack.yaml.lock  text eol=lf encoding=utf-8

# Cabal project files
*.cabal  text eol=lf encoding=utf-8

# Visual Studio Code project files
*.code-workspace  text eol=crlf encoding=utf-8
.vscode/*.json    text eol=crlf encoding=utf-8

# Code samples
*.code  text eol=lf encoding=utf-8
