<UserControl x:Class="DockingApplication.Views.Documents.FileView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">
    <Grid>
        <TextBox BorderThickness="0"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 FontFamily="Consolas, Inconsolata"
                 FontWeight="Light"
                 FontSize="14"
                 SelectionStart="{Binding SelectionStart, Mode=TwoWay}"
                 SelectionEnd="{Binding SelectionEnd, Mode=TwoWay}"
                 CaretIndex="{Binding CaretIndex, Mode=TwoWay}"
                 TextWrapping="NoWrap"
                 Text="{Binding Text}" />
    </Grid>
</UserControl>
